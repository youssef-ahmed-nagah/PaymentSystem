    <button id="extractValuesBtn">Extract Values</button>

    <script>
        document.getElementById("dynamic-table").addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault(); // Prevent default behavior of the Enter key

                // Get the currently focused element
                const focusedElement = document.activeElement;

                // Get the current row and column index
                const rowIndex = focusedElement.parentElement.rowIndex;
                const colIndex = focusedElement.cellIndex;

                // If in the last column, create a new row
                if (colIndex === 10) {
                    const table = document.getElementById("dynamic-table");
                    const newRow = table.insertRow(rowIndex + 1);

                    // Add cells to the new row
                    for (let i = 0; i < 11; i++) {
                        const cell = newRow.insertCell(i);
                        cell.contentEditable = true;
                    }

                    // Focus on the first cell of the new row
                    newRow.cells[0].focus();
                } else {
                    // Focus on the next cell in the same row
                    focusedElement.parentElement.cells[colIndex + 1].focus();
                }
            }
        });

        document.getElementById("extractValuesBtn").addEventListener("click", function () {
            const table = document.getElementById("dynamic-table");
            const rows = table.getElementsByTagName("tr");
            const dataList = [];

            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName("td");
                const rowData = {};

                for (let j = 0; j < cells.length; j++) {
                    const cellValue = cells[j].innerText.trim();
                    rowData[j] = cellValue;
                }

                dataList.push(rowData);
            }

            console.log(dataList);
        });
    </script>
